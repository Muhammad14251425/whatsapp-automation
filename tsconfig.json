{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs", // or leave as default
        "target": "esnext",
        "experimentalDecorators": true,
        "allowJs": false,
        "checkJs": false,
        "outDir": "lib",
        "strict": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}